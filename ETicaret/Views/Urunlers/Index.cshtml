@model IEnumerable<ETicaret.Models.Urunler>

@{
    ViewBag.Title = "Index";
}

<h2>Ürünler</h2>

<p>
    @Html.ActionLink("Yeni", "Create",null,new {@class="btn btn-default"  })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrunAdi)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.UrunAciklamasi)
        </th>*@
        <th>
          Resim
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunFiyat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kategoriler.KategoriAdi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UrunAdi)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.UrunAciklamasi)
        </td>*@
        <td>
          <img src="/Resim/@(item.UrunId).jpg" width="100">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrunFiyat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kategoriler.KategoriAdi)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id = item.UrunId },new {@class="btn btn-primary" }) 
            @Html.ActionLink("Detay", "Details", new { id = item.UrunId }, new { @class = "btn btn-success"  }) 
            @Html.ActionLink("Sil", "Delete", new { id = item.UrunId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
